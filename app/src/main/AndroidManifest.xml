<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hangu">

    <application
        android:allowBackup="true"
        android:label="HangYou"
        android:icon="@drawable/new_sign"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HangmanQuest">

        <!-- This is the new MenuActivity, it will open first -->
        <!-- ______________________________________________________________________________________ -->

        <activity
            android:name=".MenuActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Your existing game screen -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".OptionsActivity"
            android:exported="true" />

        <!-- ðŸŽ‰ New Activities for win and fail screens -->
        <activity
            android:name=".WinActivity"
            android:exported="true" />
        <activity
            android:name=".FailedActivity"
            android:exported="true" />

    </application>

</manifest>
