<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="@drawable/paperbg">

    <ImageView
        android:id="@+id/imageViewHomeIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_home"
        android:layout_gravity="top|start"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp" />

    <!-- Score Box (Top-Right) -->
    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:text="Score\n01"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/score_box"
        android:textColor="@android:color/black" />

    <!-- YOU FAILED! Text -->
    <TextView
        android:id="@+id/failedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/homeIcon"
        android:layout_marginTop="24dp"
        android:text="YOU FAILED!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <!-- Stickman Image (Main Illustration) -->
    <ImageView
        android:id="@+id/stickmanImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/failedText"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/stickman_failed"
        android:background="@drawable/parchment_frame" />

    <!-- TRY AGAIN Button -->
    <Button
        android:id="@+id/tryAgainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:text="TRY AGAIN"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/button_background"
        android:textColor="@android:color/black"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />


</LinearLayout>