<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paperbg"
    android:padding="16dp">

    <!-- Home Icon -->
    <ImageView
        android:id="@+id/imageViewHomeIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_home"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="4dp" />

    <!-- Score Box -->
    <TextView
        android:id="@+id/scoreText"
        android:layout_width="63dp"
        android:layout_height="64dp"
        android:background="@drawable/score_box"
        android:gravity="center"
        android:padding="8dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="4dp"/>

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NATURE"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageViewHomeIcon"
        android:layout_marginTop="6dp"/>

    <!-- Hint Icon -->
    <ImageView
        android:id="@+id/imageViewHint"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_lightbulb"
        android:layout_below="@id/titleText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

    <!-- Stickman -->

    <!-- Individual Balloons -->

    <ImageView
        android:id="@+id/imageViewStickman"
        android:layout_width="344dp"
        android:layout_height="274dp"
        android:layout_below="@id/titleText"
        android:layout_marginTop="32dp"
        android:src="@drawable/stickman_main" />

    <!-- Shark -->

    <ImageView
        android:id="@+id/balloon1"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_alignStart="@id/imageViewStickman"
        android:layout_alignTop="@id/imageViewStickman"
        android:layout_marginStart="166dp"
        android:layout_marginTop="51dp"
        android:src="@drawable/orange" />

    <ImageView
        android:id="@+id/balloon3"
        android:layout_width="95dp"
        android:layout_height="175dp"
        android:layout_alignTop="@id/imageViewStickman"
        android:layout_alignEnd="@id/imageViewStickman"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="111dp"
        android:src="@drawable/yellow" />

    <ImageView
        android:id="@+id/balloon5"
        android:layout_width="95dp"
        android:layout_height="159dp"
        android:layout_alignTop="@id/imageViewStickman"
        android:layout_alignEnd="@id/imageViewStickman"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="133dp"
        android:src="@drawable/blue" />

    <ImageView
        android:id="@+id/balloon4"
        android:layout_width="95dp"
        android:layout_height="159dp"
        android:layout_alignTop="@id/imageViewStickman"
        android:layout_alignEnd="@id/imageViewStickman"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="149dp"
        android:src="@drawable/green" />

    <ImageView
        android:id="@+id/balloon6"
        android:layout_width="106dp"
        android:layout_height="126dp"
        android:layout_alignTop="@id/imageViewStickman"
        android:layout_alignEnd="@id/imageViewStickman"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="153dp"
        android:src="@drawable/pink" />

    <ImageView
        android:id="@+id/imageViewMonster2"
        android:layout_width="249dp"
        android:layout_height="117dp"
        android:layout_below="@id/imageViewStickman"
        android:layout_marginTop="-55dp"
        android:src="@drawable/monster2" />

    <TextView
        android:id="@+id/puzzleText"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewStickman"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-16dp"
        android:layout_marginEnd="4dp"
        android:text="_ _ _ _ _ _ _ _"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/keyboardGrid"
        android:layout_width="387dp"
        android:layout_height="224dp"
        android:layout_below="@id/imageViewMonster2"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="18dp"
        android:alignmentMode="alignMargins"
        android:columnCount="7"
        android:padding="4dp"
        android:rowCount="4">

        <!-- Buttons A-Z -->
        <Button android:id="@+id/btnA" style="@style/LetterButton" android:text="A"/>
        <Button android:id="@+id/btnB" style="@style/LetterButton" android:text="B"/>
        <Button android:id="@+id/btnC" style="@style/LetterButton" android:text="C"/>
        <Button android:id="@+id/btnD" style="@style/LetterButton" android:text="D"/>
        <Button android:id="@+id/btnE" style="@style/LetterButton" android:text="E"/>
        <Button android:id="@+id/btnF" style="@style/LetterButton" android:text="F"/>
        <Button android:id="@+id/btnG" style="@style/LetterButton" android:text="G"/>
        <Button android:id="@+id/btnH" style="@style/LetterButton" android:text="H"/>
        <Button android:id="@+id/btnI" style="@style/LetterButton" android:text="I"/>
        <Button android:id="@+id/btnJ" style="@style/LetterButton" android:text="J"/>
        <Button android:id="@+id/btnK" style="@style/LetterButton" android:text="K"/>
        <Button android:id="@+id/btnL" style="@style/LetterButton" android:text="L"/>
        <Button android:id="@+id/btnM" style="@style/LetterButton" android:text="M"/>
        <Button android:id="@+id/btnN" style="@style/LetterButton" android:text="N"/>
        <Button android:id="@+id/btnO" style="@style/LetterButton" android:text="O"/>
        <Button android:id="@+id/btnP" style="@style/LetterButton" android:text="P"/>
        <Button android:id="@+id/btnQ" style="@style/LetterButton" android:text="Q"/>
        <Button android:id="@+id/btnR" style="@style/LetterButton" android:text="R"/>
        <Button android:id="@+id/btnS" style="@style/LetterButton" android:text="S"/>
        <Button android:id="@+id/btnT" style="@style/LetterButton" android:text="T"/>
        <Button android:id="@+id/btnU" style="@style/LetterButton" android:text="U"/>
        <Button android:id="@+id/btnV" style="@style/LetterButton" android:text="V"/>
        <Button android:id="@+id/btnW" style="@style/LetterButton" android:text="W"/>
        <Button android:id="@+id/btnX" style="@style/LetterButton" android:text="X"/>
        <Button android:id="@+id/btnY" style="@style/LetterButton" android:text="Y"/>
        <Button android:id="@+id/btnZ" style="@style/LetterButton" android:text="Z"/>
    </GridLayout>

    <TextView
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="#008000"
        android:textStyle="bold"
        android:layout_below="@id/keyboardGrid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />
</RelativeLayout>
