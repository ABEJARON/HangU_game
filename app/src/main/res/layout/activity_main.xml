<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paperbg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Category Spinner (now at the top) -->
        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:spinnerMode="dropdown" />

        <!-- Word display (blanks) now under category -->
        <TextView
            android:id="@+id/wordTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/joti_one"
            android:gravity="center"
            android:text="____"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Attempts counter now under the blanks -->
        <TextView
            android:id="@+id/attemptsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attempts left: 6"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Hangman image layout -->

        <!-- Letter Buttons Grid -->

        <!-- Restart Button -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/bastapisi"
                android:layout_width="381dp"
                android:layout_height="208dp"
                android:scaleType="fitCenter"
                android:src="@drawable/bastapisi" />

        </FrameLayout>

        <Button
            android:id="@+id/restartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:backgroundTint="#FF5722"
            android:fontFamily="@font/joti_one"
            android:padding="8dp"
            android:text="Restart"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <GridLayout
            android:id="@+id/letterButtonsGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:columnCount="7"
            android:src="@drawable/hangman0">

        </GridLayout>

        <ImageView
            android:id="@+id/hangmanImageView"
            android:layout_width="385dp"
            android:layout_height="157dp"
            android:scaleType="fitCenter" />

    </LinearLayout>
</ScrollView>
