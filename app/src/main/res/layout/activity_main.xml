<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paperbg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Category Spinner -->
        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:spinnerMode="dropdown" />

        <!-- Word Display -->
        <TextView
            android:id="@+id/wordTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/joti_one"
            android:gravity="center"
            android:text="____"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Attempts Counter -->
        <TextView
            android:id="@+id/attemptsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attempts left: 6"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Hangman Image Stack -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Combined Wooden Structure with Rope -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/hangman_structure" />

            <!-- Body Parts (initially invisible) -->
            <ImageView
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:visibility="invisible"
                android:src="@drawable/hangman0" />

            <ImageView
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:visibility="invisible"
                android:src="@drawable/hangman1" />

            <ImageView
                android:id="@+id/right_arm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:visibility="invisible"
                android:src="@drawable/hangman2" />

            <ImageView
                android:id="@+id/left_arm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:visibility="invisible"
                android:src="@drawable/hangman3" />

            <ImageView
                android:id="@+id/right_leg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:visibility="invisible"
                android:src="@drawable/hangman4" />

            <ImageView
                android:id="@+id/left_leg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:visibility="invisible"
                android:src="@drawable/hangman5" />

        </FrameLayout>

        <GridLayout
            android:id="@+id/letterButtonsGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:columnCount="7">
        </GridLayout>

        <Button
            android:id="@+id/restartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FF5722"
            android:fontFamily="@font/joti_one"
            android:padding="8dp"
            android:text="Restart"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />



    </LinearLayout>
</ScrollView>